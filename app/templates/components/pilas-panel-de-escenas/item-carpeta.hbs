<div class="{{claseSeleccionado}} pa2 mr2 br2" role="button" {{action "alternar"}}>
  <div class="colapsador">
    {{#if carpeta.abierta}}
      ▾
    {{else}}
      ▸
    {{/if}}
  </div>

  {{#if carpeta.abierta}}
    {{pilas-icono icono="carpeta-abierta"}}
  {{else}}
    {{pilas-icono icono="carpeta"}}
  {{/if}}

  {{carpeta.nombre}}
</div>

{{#if carpeta.abierta}}
  <div class="ml4">
    {{#each actores as |actor|}}

      {{pilas-panel-de-escenas/item-actor
        actor=actor
        seleccion=seleccion
        escenas=escenas
        ultimaEscenaSeleccionada=ultimaEscenaSeleccionada
        cuandoSelecciona=cuandoSelecciona
      }}
    {{else}}
      <div class="texto pv1 o-50 pl3 ml2">
        sin actores
      </div>
    {{/each}}
  </div>
{{/if}}
