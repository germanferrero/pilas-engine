{{yield}}

<div class="tc mt4 lato gray">
  <div class="dib w1">
  </div>

  {{#if enDesarrollo}}
    {{t "versions.development"}}
    <br>
    <a class="f7 link gray" href="https://github.com/pilas-engine/pilas-engine/commits/master" target="_blank" rel="noopener">{{version}} ({{t "versions.more.info"}})</a>
  {{else}}
    {{version_simplificada}}
  {{/if}}

  <div class="w1 dib pt1">

    {{#if consultando}}
      {{#pilas-tooltip class="w4" texto=(t "versions.searching")}}
        {{pilas-spinner}}
      {{/pilas-tooltip}}
    {{else}}
      {{#if actualizada}}
        {{#pilas-tooltip class="w4" texto=(t "versions.updated")}}
          {{pilas-mini-icono icono="actualizada"}}
        {{/pilas-tooltip}}
      {{else}}
        {{#pilas-tooltip class="right-1 w4" texto=(t "versions.new")}}
          <div class="red dib">
            {{pilas-mini-icono icono="desactualizada"}}
          </div>
        {{/pilas-tooltip}}
      {{/if}}
    {{/if}}
  </div>
</div>
